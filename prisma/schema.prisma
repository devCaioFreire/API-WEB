generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model DataSale {
  saleID        Int         @id @default(autoincrement())
  totalValue    Float
  sellerId      Int
  discount      Int
  paymentMethod String
  cashChange    Float?
  items         DataItems[]
}

model DataItems {
  id             Int       @id @default(autoincrement())
  ean            String
  description    String
  quantity       Int
  DataSale       DataSale? @relation(references: [saleID], fields: [dataSaleSaleID])
  dataSaleSaleID Int?
}
