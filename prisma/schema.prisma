generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model DataSale {
  id            Int         @id @default(autoincrement())
  totalValue    Float
  sellerId      Int
  discount      Int
  paymentMethod String
  cashChange    Float?
  items         DataItems[]
}

model DataItems {
  id          Int       @id @default(autoincrement())
  ean         Int
  description String
  DataSale    DataSale? @relation(fields: [dataSaleId], references: [id])
  dataSaleId  Int?
}
